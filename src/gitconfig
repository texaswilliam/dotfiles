[alias]
	gcgc = repack -adf --depth=50 --window=500
	wdiff = diff --word-diff=color
[color]
	ui = true
[color "diff"]
	new = green bold
	old = red bold
[core]
	autocrlf = input
	pager = less -FRX
	whitespace = space-before-tab,trailing-space
[diff]
	algorithm = histogram
	wordRegex = [[:alnum:]]+|[[:graph:]]
[grep]
	patternType = perl
[pager]
	help = less -R
[pull]
	rebase = true
[push]
	default = current
[rebase]
	autoStash = true
